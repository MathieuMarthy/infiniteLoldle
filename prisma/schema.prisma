// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./db.db"
}

model Champion {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  gender      String
  positions   String
  species     String
  resource    String
  rangeType   String
  regions     String
  releaseDate String
  Quotes      Quotes[]
  Emojis      Emoji[]
}

model Quotes {
  id         Int      @id @default(autoincrement())
  championId Int
  champion   Champion @relation(fields: [championId], references: [id])
}

model Emoji {
  id         Int      @id @default(autoincrement())
  championId Int
  champion   Champion @relation(fields: [championId], references: [id])
  emoji      String
}
